# Copy this file to .env. Do NOT commit real secrets.

# ---- Dev in-memory user (form login) ----
# Enable only in controlled environments for quick testing.
# When enabled, also set USER_NAME and USER_PASSWORD.
APP_SECURITY_DEV_USER_ENABLED=true
APP_SECURITY_USER_NAME=dev
APP_SECURITY_USER_PASSWORD=dev123

# ---- OAuth2 (GitHub) - optional for Docker/local ----
# Opt-in toggle; leave false or unset to run without OAuth.
OAUTH2_ENABLED=true

# Your GitHub OAuth App (DEV) must have this callback URL:
#   http://localhost:5173/login/oauth2/code/github

# Spring OAuth2 client variables (do not leave empty when OAUTH2_ENABLED=true)
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_CLIENT_ID=your_dev_client_id
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_CLIENT_SECRET=your_dev_client_secret
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_SCOPE=read:user,user:email
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_REDIRECT_URI={baseUrl}/login/oauth2/code/github

# ---- Frontend URL for redirects (Docker) ----
# Optional: override if needed (defaults to http://localhost:5173)
# APP_FRONTEND_URL=http://localhost:5173
